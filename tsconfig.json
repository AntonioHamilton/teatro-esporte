{
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"rootDir": ".",
		"jsx": "preserve",
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowJs": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noEmit": true,
		"incremental": true,
		"paths": {
			"@api/*": ["./api/*"],
			"@app/*": ["./app/*"],
			"@images/*": ["./app/assets/images/*"],
			"@interfaces/*": ["./interfaces/*"],
			"@services/*": ["./services/*"],
			"@utils/*": ["./utils/*"],
			"@middlewares/*": ["./middlewares/*"],
			"@components/*": ["./src/components/*"],
			"@config/*": ["./src/config/*"],
			"@statistics/*": ["./src/statistics/*"],
			"@/*": ["./src/*"],
			"@styles/*": ["./src/styles/*"]
		},
		"lib": ["dom", "dom.iterable", "esnext"],
		"isolatedModules": true
	},
	"include": [
		"./src/statistics/*",
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"./utils/**/*",
		"./api/**/*",
		"./app/**/*",
		"./services/**/*",
		"./interfaces/**/*",
		"./config/**/*",
		"./middlewares/**/*",
		"./tests/**/*",
		"./types/**/*.d.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/helpers/**/*",
		"./src/api/**/*",
		"./src/app/**/*",
		"./src/services/**/*",
		"./src/interfaces/**/*",
		"./src/config/**/*",
		"./src/middlewares/**/*",
		"./src/tests/**/*",
		"./src/types/**/*.d.ts"
	],
	"exclude": ["node_modules"]
}
